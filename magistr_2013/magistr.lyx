\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
\begin_inset Formula 
\[
\tilde{T}(k,\Phi)=\left(\begin{array}{cc}
\left\{ 1\right\}  & \left\{ g(k,\Phi)\right\} \\
\left\{ -g(-k,\Phi)\right\}  & \left\{ -1\right\} 
\end{array}\right)
\]

\end_inset


