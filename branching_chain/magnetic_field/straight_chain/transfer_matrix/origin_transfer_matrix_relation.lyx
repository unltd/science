\end_inset

.
\end_layout

\begin_layout Standard
1.
 Перепишем, отправляя мнимую единицу в знаминатель:
\end_layout

\begin_layout Standard
\begin_inset Formula $\tilde{M}=\left(\begin{array}{cc}
\left\{ e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2e^{i2k\pi}-\frac{\alpha}{2\text{i}k}\left(e^{i2k\pi}-1\right)\right\}  & \left\{ .\right\} \\
\left\{ 1-e^{i2k\pi}e^{-i2\Phi\pi}+e^{i2k\pi}-e^{i2\Phi\pi}+\frac{\alpha}{2ik}\left(e^{i2k\pi}-1\right)\right\}  & \left\{ .\right\} 
\end{array}\right)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\tilde{M}=\left(\begin{array}{cc}
\left\{ .\right\}  & \left\{ e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}-\frac{\alpha}{2ik}\left(1-e^{-i2k\pi}\right)\right\} \\
\left\{ .\right\}  & \left\{ 2e^{-i2k\pi}-e^{-i2\Phi\pi}-e^{i2\Phi\pi}+\frac{\alpha}{2ik}\left(1-e^{-i2k\pi}\right)\right\} 
\end{array}\right)$
\end_inset

.
\end_layout

\begin_layout Standard
2.
 Перепишем 
\begin_inset Formula $\tilde{m}_{1,1}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2+2-2e^{i2k\pi}-\frac{\alpha}{2\text{i}k}\left(e^{i2k\pi}-1\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2-2\left(e^{i2k\pi}-1\right)-\frac{\alpha}{2\text{i}k}\left(e^{i2k\pi}-1\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2-2\left(e^{i2k\pi}-1\right)\left(1+\frac{\alpha}{4\text{i}k}\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2-2\left(e^{ik\pi}-e^{-ik\pi}\right)e^{ik\pi}\left(1+\frac{\alpha}{4\text{i}k}\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2+2\left(e^{-ik\pi}-e^{ik\pi}\right)M_{1,1}(k,0)$
\end_inset


\end_layout

\begin_layout Standard
3.
 Матричный элемент 
\begin_inset Formula $m_{1,1}$
\end_inset

 трансферной матрицы
\end_layout

\begin_layout Standard
получит следующий вид:
\end_layout

\begin_layout Standard
\begin_inset Formula $m_{1,1}(k,\Phi)=f(k,\Phi)\cdot\tilde{m}_{1,1}(k,\Phi)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=f(k,\Phi)\cdot\left(e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2+2\left(e^{-ik\pi}-e^{ik\pi}\right)M_{1,1}(k,0)\right)$
\end_inset

.
\end_layout

\begin_layout Standard
4.
 Используем свойства трансферной матрицы,
\end_layout

\begin_layout Standard
полученные в transfer_matrix_sym_property.lyx:
\end_layout

\begin_layout Standard
\begin_inset Formula $m_{2,2}(k,\Phi)=m_{1,1}(-k,\Phi)=m_{1,1}(-k,\Phi)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=f(-k,\Phi)\cdot\left(e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2+2\left(e^{ik\pi}-e^{-ik\pi}\right)M_{1,1}(-k,0)\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=-f(k,\Phi)\cdot\left(e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2-2\left(e^{-ik\pi}-e^{ik\pi}\right)M_{2,2}(k,0)\right)$
\end_inset

.
\end_layout

\begin_layout Standard
5.
 Теперь перепишем
\begin_inset Formula $\tilde{m}_{1,2}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula $\tilde{m}_{1,2}=e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}-\frac{\alpha}{2ik}\left(1-e^{-i2k\pi}\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}-\frac{\alpha}{2ik}\left(1-e^{-i2k\pi}\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}-e^{-ik\pi}\frac{\alpha}{2ik}\left(e^{ik\pi}-e^{-ik\pi}\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}+2\left(e^{-ik\pi}-e^{ik\pi}\right)e^{-ik\pi}\frac{\alpha}{4ik}=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}+2\left(e^{-ik\pi}-e^{ik\pi}\right)M_{1,2}\left(k,0\right)$
\end_inset

.
\end_layout

\begin_layout Standard
6.
 Уделим немного внемания следующему выражению:
\end_layout

\begin_layout Standard
\begin_inset Formula $e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{-i2k\pi}e^{-i2\Phi\pi}-e^{-i2k\pi}+e^{i2\Phi\pi}-1=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{-i2k\pi}\left(e^{-i2\Phi\pi}-1\right)+e^{i2\Phi\pi}-1=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=e^{-i2k\pi}e^{-i\Phi\pi}\left(e^{-i\Phi\pi}-e^{i\Phi\pi}\right)+e^{i\Phi\pi}\left(e^{i\Phi\pi}-e^{-i\Phi\pi}\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=\left(e^{-i2k\pi}e^{-i\Phi\pi}-e^{i\Phi\pi}\right)\left(e^{-i\Phi\pi}-e^{i\Phi\pi}\right)$
\end_inset


\end_layout

\begin_layout Standard
