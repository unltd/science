\begin_layout Standard
\begin_inset Formula $\frac{tr(A)\pm\sqrt{D}}{2}=e^{i\theta}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{tr(A)\pm\sqrt{tr(A)^{2}-4det(A)}}{2}=e^{i\theta}$
\end_inset

, 
\begin_inset Formula $\theta\in\left[0;2\pi\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\pm\sqrt{tr(A)^{2}-4det(A)}=2e^{i\theta}-tr(A)$
\end_inset


