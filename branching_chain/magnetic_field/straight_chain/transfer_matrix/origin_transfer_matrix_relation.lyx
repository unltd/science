\end_layout

\begin_layout Standard
\begin_inset Formula $m_{1,2}(k,\Phi)=f(k,\Phi)\tilde{m}_{1,2}(k,\Phi)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=f(k,\Phi)\left(e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}+2\left(e^{-ik\pi}-e^{ik\pi}\right)M_{1,2}\left(k,0\right)\right)$
\end_inset

.
\end_layout

\begin_layout Standard
8.
 И накрест противоположный ему элемент:
\end_layout

\begin_layout Standard
\begin_inset Formula $m_{2,1}(k,\Phi)=m_{1,2}(-k,\Phi)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=f(-k,\Phi)\left(e^{i2k\pi}e^{-i2\Phi\pi}-1-e^{i2k\pi}+e^{i2\Phi\pi}-2\left(e^{-ik\pi}-e^{ik\pi}\right)M_{1,2}\left(-k,0\right)\right)=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $=-f(k,\Phi)\left(e^{i2k\pi}e^{-i2\Phi\pi}-1-e^{i2k\pi}+e^{i2\Phi\pi}-2\left(e^{-ik\pi}-e^{ik\pi}\right)M_{2,1}\left(k,0\right)\right)$
\end_inset

.
\end_layout

