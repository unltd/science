\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
 &  & R_{n}=\frac{1}{\sin k\beta_{n}},\\
 &  & Q_{m,n}=\frac{v}{ku}+\cot k\beta_{m}+\cot k\beta_{n},
\end{eqnarray*}

\end_inset


\begin_inset Formula $m,n=1,2,3$
\end_inset

, 
\begin_inset Formula $m\ne n$
\end_inset

.
