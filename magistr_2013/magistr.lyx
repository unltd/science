\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $\widetilde{M}\left(k,\Phi\right)$
\end_inset

 мы опишем её столбцами:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\widetilde{M}\left(k,\Phi\right)^{\left\langle 1\right\rangle }=\mbox{\left(\begin{array}{c}
e^{i2\Phi\pi}+e^{-i2\Phi\pi}-2e^{i2k\pi}+\frac{i\alpha}{2k}\left(e^{i2k\pi}-1\right)\\
1-e^{i2k\pi}e^{-i2\Phi\pi}+e^{i2k\pi}-e^{i2\Phi\pi}-\frac{i\alpha}{2k}\left(e^{i2k\pi}-1\right)
\end{array}\right)},
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\widetilde{M}\left(k,\Phi\right)^{\left\langle 2\right\rangle }=\mbox{\left(\begin{array}{c}
e^{-i2k\pi}e^{-i2\Phi\pi}-1-e^{-i2k\pi}+e^{i2\Phi\pi}+\frac{i\alpha}{2k}\left(1-e^{-i2k\pi}\right)\\
2e^{-i2k\pi}-e^{-i2\Phi\pi}-e^{i2\Phi\pi}-\frac{i\alpha}{2k}\left(1-e^{-i2k\pi}\right)
\end{array}\right)}.
\]

\end_inset


\end_layout

\begin_layout Standard
В целях дальнейшего спектрального анализа трансфер-матрицы оказалось полезно
 получитье следующее ее разложение:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
M(k,\Phi)=f(k,\Phi)\left\{ T(k,\Phi)+2\left(e^{-ik\pi}-e^{ik\pi}\right)M(k,0)\right\} ,\label{eq:mag_trans_matrix_decomp}
\end{equation}

\end_inset

где 
\begin_inset Formula 
\[
f(k,\Phi)=\left(e^{-i\Phi\pi}+e^{i\Phi\pi}\right)^{-1}\left(e^{-ik\pi}-e^{ik\pi}\right)^{-1}
\]

\end_inset

- функция 
\begin_inset Formula $f:\:\mathbb{C}\otimes\mathbb{C}\mapsto\mathbb{C}$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
T(k,\Phi)=\left(e^{i\Phi\pi}-e^{-i\Phi\pi}\right)^{2}\tilde{T}(k,\Phi)
\]

\end_inset

- функция 
\begin_inset Formula $T:\mathbb{C}\otimes\mathbb{C}\rightarrow\mathbb{C}_{2x2}$
\end_inset

,
\end_layout

\begin_layout Standard

